@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if(Model.WarningMsg.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Attention !</strong> 
        <p>@Model.WarningMsg</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Liste des sous menus</h1>
    <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Choix</th>
                    <th>Code</th>
                    <th>Designation</th>
                    <th>URL</th>
                    <th>Icone</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var value in Model.menus)
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="menu" value="@value.Code" checked="@value.Checked">
                        </td>
                        <td>@value.Code</td>
                        <td>@value.Designation</td>
                        <td>@value.Url</td>
                        <td>
                            <i class="@value.Icone"></i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col">
                <button type="submit" name="valider" class="btn btn-success" asp-page-handler="Submit">Voir la liste sélectionnée</button>
            </div>
        </div>
    </form>
    <p>
        @if (ViewData["msg"] != null)
        {
            @ViewData["msg"]
        }
    </p>
</div>
